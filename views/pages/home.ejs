<%- contentFor('main') %>
    <div class="pt-2">
        <h2 class="sec-title">Visão geral</h2>
    </div>
    <div class="row pt-4">
        <div class="col">
            <div class="card blacked border-radius">
                <div class="card-header purple semi-radius">
                    <p class="title">Total de pedidos cadastrados</p>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= totais.cadastrados.geral %> pedidos </p>
                    <div class="divider"></div>
                    <h5>No ultimo mês</h5>
                    <p class="card-text">
                        <%= totais.cadastrados.mes %> pedidos cadastrados nos últimos 30 dias</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card blacked border-radius">
                <div class="card-header green semi-radius">
                    <p class="title">Total de pedidos entregues</p>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= totais.entregues.geral %> pedidos entregues</p>
                    <div class="divider"></div>
                    <h5>No ultimo mês</h5>
                    <p class="card-text">
                        <%= totais.entregues.mes %> pedidos entregues nos últimos 30 dias</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card blacked border-radius">
                <div class="card-header red semi-radius">
                    <p class="title">Total de pedidos não entregues</p>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= totais.naoEntregues.geral %> pedidos não entregues</p>
                    <div class="divider"></div>
                    <h5>No ultimo mês</h5>
                    <p class="card-text">
                        <%= totais.naoEntregues.mes %> pedidos entregues nos últimos 30 dias</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col">
            <div class="card blacked border-radius">
                <div class="card-header blue semi-radius">
                    <p class="title">Ultimos pedidos cadastrados</p>
                </div>
                <div class="card-body">
                    <% ultimosPedidos.forEach(pedido => { %>
                        <ul class="requests mb-3 border-radius">
                            <li class="request-item">
                                <p class="item-name">
                                    <%= pedido.nome_destinatario %> ,
                                        <%= pedido.logradouro %> -
                                            <%= pedido.numero_logradouro %> -
                                                <span style="color: gainsboro; font-weight: 600;"> Status: <%= pedido.status_pedido %></span>
                                </p>
                                <% if (pedido.complemento) { %>
                                    <div class="item-info mb-2">
                                        <p>Complemento: </p>
                                        <%= pedido.complemento %>
                                    </div>
                                <% } %>
                                <div class="item-info mb-2">
                                    <p>Entregador(a): </p>
                                    <%= pedido.nome_entregador %>
                                </div>
                                <div class="item-info">
                                    <p>Observações: </p>
                                    <%= pedido.observacoes %>
                                </div>

                                <div class="item-option">
                                    <div class="item-price">
                                        <p class="price">Valor do Pedido: R$ <%= pedido.valor_total %></p>
                                    </div>
                                    <div class="options">
                                        <a class="btn btn-edit green border-radius" href="/pedido/<%=pedido.id_pedido%>/cadastrar-item"><i class='bx bx-edit'></i></a>
                                        <a class="btn btn-trash red border-radius" href="/pedido-deletar/<%=pedido.id_pedido%>"><i class='bx bx-trash'></i></a>
                                    </div>
                                </div>
                            </li>

                        </ul>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>